<?php
  //////////////////////////////////////////////////////////////////////////////
  // Система управления ведомыми сайтами
  //////////////////////////////////////////////////////////////////////////////

  //////////////////////////////////////////////////////////////////////////////
  //Удаляет конфиг. файл ведомого сайта
  //////////////////////////////////////////////////////////////////////////////


  //////////////////////////////////////////////////////////////////////////////
  //инициализация переменных
  //////////////////////////////////////////////////////////////////////////////

  $site = correct_input($_GET['site']);
  $state = intval($_GET['state']);


  //////////////////////////////////////////////////////////////////////////////
  //диалоговое окно подтверждения удаления
  //////////////////////////////////////////////////////////////////////////////

  if(empty($state))
  {
    $caption = str_replace("{site}", $site, $l_sites[27]);
    print "<h1>{$caption}</h1><br><br><br><br><br><br><br><div align='center'><a href='?adm=sites_del&site=$site&state=1'>{$l_adm_gen[5]}</a> <a href='?adm=sites_list'>{$l_adm_gen[6]}</a></div>";
  }


  //////////////////////////////////////////////////////////////////////////////
  //удаляем конф. файл сайта
  //////////////////////////////////////////////////////////////////////////////

  if($state == 1)
  {
    //удаляем конф. файл сайта
    $path = "config/sites/{$site}";
    if(file_exists($path) && !is_dir($path))
       unlink($path);

    //переходим в список сайтов
    echo "<HTML><HEAD><META HTTP-EQUIV='Refresh' CONTENT='0; URL=?adm=sites_list'></HEAD></HTML>";
    exit;
  }




?>